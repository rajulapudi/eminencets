    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script>
      let info = <%-JSON.stringify(info)%>;
      if (info.length) {
        Toastify({
          text: "success",
          duration: 2000,
          destination: "https://github.com/apvarun/toastify-js",
          newWindow: true,
          close: true,
          gravity: "bottom", // `top` or `bottom`
          position: 'right', // `left`, `center` or `right`
          backgroundColor: "linear-gradient(to right, #ff5821, #ff7e54)",
          stopOnFocus: true, // Prevents dismissing of toast on hover
          onClick: function () { } // Callback after click
        }).showToast();
      }
    </script>
    <script type="text/javascript">
      function dummyJob() {
        document
          .getElementById("jobFormAlert")
          .classList.remove("alert-danger");
        document.getElementById("jobFormAlert").classList.add("alert-warning");
        if (document.jobSearchForm.searchTerm.value == "") {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>Please provide proper job search term!</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            $("#jobFormAlert").hide();
          }, 2000);
          document.jobSearchForm.searchTerm.focus();
          return false;
        }
        if (
          document.jobSearchForm.location.value == "" ||
          isNaN(document.jobSearchForm.location.value) ||
          document.jobSearchForm.location.value.length !== 5
        ) {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>Please provide a correct location pin</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            $("#jobFormAlert").hide();
          }, 2000);
          document.jobSearchForm.location.focus();
          return false;
        }
        if (true) {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>searching....</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            document.getElementById("jobFormAlert").innerHTML =
              "<strong>Sorry we cound not find any relevant Jobs !! <br> Please share your details in the form below</strong> ";
            document
              .getElementById("jobFormAlert")
              .classList.remove("alert-warning");
            document
              .getElementById("jobFormAlert")
              .classList.add("alert-danger");
            setTimeout(() => {
              $("#jobFormAlert").hide();
            }, 4000);
          }, 2000);

          return false;
        }
        return true;
      }
    </script>
    <script type="text/javascript">
      function validate() {
        if (document.myForm.name.value == "") {
          document.getElementById("formAlert").innerHTML =
            "<strong>Please provide your name!</strong> ";
          $(".alert").show();
          setTimeout(() => {
            $(".alert").hide();
          }, 2000);
          document.myForm.name.focus();
          return false;
        }
        if (document.myForm.email.value == "") {
          document.getElementById("formAlert").innerHTML =
            "<strong>Please provide your email!</strong> ";
          $(".alert").show();
          setTimeout(() => {
            $(".alert").hide();
          }, 2000);
          document.myForm.email.focus();
          return false;
        }
        if (
          document.myForm.contact.value == "" ||
          isNaN(document.myForm.contact.value) ||
          document.myForm.contact.value.length < 12
        ) {
          document.getElementById("formAlert").innerHTML =
            "<strong>Please provide a contact in the format 910000000000!</strong> ";
          $(".alert").show();
          setTimeout(() => {
            $(".alert").hide();
          }, 2000);
          document.myForm.contact.focus();
          return false;
        }
        return true;
      }
    </script>
    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>
  </body>
</html>
