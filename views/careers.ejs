  <body>
    <%- include('partials/navBar') -%> <%- include('partials/header') -%>

    <main id="main">
      <%- include('partials/careerInfo') -%> <%-
      include('partials/jobSearchForm')-%> <%- include('partials/uploadForm')-%>
    </main>
    <%- include('partials/footer') -%> <%- include('partials/credits') -%>
